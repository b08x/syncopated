# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
    name = {{ user.name }}
    email = {{ user.email }}
[color]
    ui = auto
[pull]
    rebase = false
[merge]
    tool = xxdiff
[core]
    editor = nvim
[init]
    defaultBranch = main
[credential]
    helper = libsecret
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
